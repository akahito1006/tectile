<% if article.user == current_user %>
  <span class="btn btn-primary">いいね♥<%= @article.likes.count %></span>
<% else %>
  <% if article.liked_by(current_user, article) %>
    <%= link_to "いいね♥#{article.likes.count}", article_likes_path(article), method: :delete, remote: true, class:"btn btn-primary" %>
  <% else %>
    <%= link_to "いいね♡#{article.likes.count}", article_likes_path(article), method: :post, remote: true, class:"btn btn-primary" %>
  <% end %>
  <!--Ajax, likes.count <= likes_count(counter_cache on articles table)-->
<% end %>